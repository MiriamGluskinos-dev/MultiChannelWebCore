{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src",
    "src/i18n/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/playground",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ]
}